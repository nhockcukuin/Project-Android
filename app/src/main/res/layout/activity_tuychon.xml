<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="OnClick"
    tools:context=".TuyChonActivity">

    <TextView
        android:id="@+id/txt_tuychon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tùy Chọn"
        android:textSize="30dp"
        android:textColor="#000000"
        android:paddingTop="10dp"
        android:gravity="center"
        />

    <Button
        android:id="@+id/btn_tuychon_thongtin"
        android:onClick="btnthongtin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin người dùng"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:background="@drawable/botron"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/txt_tuychon"

        />

    <Button
        android:id="@+id/btn_tuychon_yeuthich"
        android:onClick="btnyeuthich"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Sách yêu thích"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="25dp"
        android:background="@drawable/botron"
        android:layout_below="@+id/btn_tuychon_thongtin"
        />

    <Button
        android:id="@+id/btn_tuychon_dangxuat"
        android:onClick="btndx"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Đăng xuất"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="25dp"
        android:background="@drawable/botron"
        android:layout_below="@+id/btn_tuychon_yeuthich"
        />

    <Button
        android:id="@+id/btn_tuychon_thoat"
        android:onClick="btnthoat"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Thoát"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:background="@drawable/botron"
        android:layout_below="@+id/btn_tuychon_dangxuat"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        app:itemBackground="@color/colorPrimaryDark"
        app:itemTextColor="#ffffff"
        app:itemIconTint="#ffffff"
        app:menu="@menu/bottom_nav_menu"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>