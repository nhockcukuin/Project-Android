<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">

    <TextView
        android:id="@+id/txt_tk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tài khoản"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
         />
    <EditText
        android:id="@+id/edt_tk"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/botron"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txt_tk"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/txt_mk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mật khẩu"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_tk"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/edt_mk"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/botron"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txt_mk"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_tk"
        />

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_mk"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/edt_email"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/botron"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/txt_email"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edt_mk"
        />

    <Button
        android:id="@+id/btn_dmk"
        android:background="@drawable/botron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btndmk"
        android:text="Đổi mật khẩu"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_email"
        android:layout_marginTop="30dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>